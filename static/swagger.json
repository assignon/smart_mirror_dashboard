  "components": {
    "schemas": {
      "GetUser": {
            "type": "object",
            "properties": {
              "user_id": {
                "type": "integer",
                "format": "int64"
              },
              "name": {
                "type": "string"
              },
              "is_admin": {
                "type": "boolean"
              },
              "email": {
                "type": "string"
              }
            }
          }  
      ,
      "CreateUser":{
        "type": "object",
        "required": [
          "name", "email", "password", "is_admin"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "is_admin": {
            "type": "boolean"
          },
          "email": {
            "type": "string"
          },
          "password":{
            "type": "string"
          }          
        }
      },
      "EditUser":{
