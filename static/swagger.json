    "/password": {
      "get": {
        "tags": ["PasswordManager"],
        "summary": "get a special token via mail to change password",
        "description": "this api returns a special token to the users email if the email exists in the user table.",
        "requestBody": {
        "description": "Edit the appointment information",
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/GetPasswordToken"
            }
          }
        }
      },
      "responses":{
        "200":{
          "description": "successful operation",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "$ref": "#/components/schemas/GetPasswordTokenResponse"
              }
            }
          }
        },
        "400":
          {"message": "Email does not exist"}
        }
      },
      "post": {
        "tags": ["PasswordManager"],
        "summary": "validate the new_password token",
        "description": "This api checks if the password is valid if it is valid it will send a response with a key 'Authorized' and value = True, if True the user can continue to change the password",
        "requestBody": {
        "description": "Edit the appointment information",
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ValidatePasswordToken"
            }
          }
        }
      },
      "responses":{
        "200":{
          "description": "successful operation",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "$ref": "#/components/schemas/ValidatePasswordTokenResponse"
              }
            }
          }
        },
        "400":
          {"description": "Server Error"}
        }
      },
      "put": {
        "tags": ["PasswordManager"],
        "summary": "updates the password in the database",
        "description": "api receives the new_password token and the new password, the token is used again for security reasons. the new_password token is destroyed when the password has been updated",
        "requestBody": {
        "description": "Edit the appointment information",
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/EditPassword"
            }
          }
        }
      },
      "responses":{
        "200":{
          "description": "successful operation",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "$ref": "#/components/schemas/EditPasswordResponse"
              }
            }
          }
        },
        "400":
          {"description": "Server Error"}
        }
      }
    }
}
